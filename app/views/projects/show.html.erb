
    <h1><%= @project.name %></h1>
    <p><%= @project.description %></p>

    Status: <%= @project.status %><br><br>
    
    Communities:
    <ul>
    <% @project.communities.each do |community| %>
        <li><%= link_to community.name, community %></li>
    <% end %>
    </ul>
    <%= link_to "Create a New Community", new_community_path, :class => "btn-primary btn-sm" %>
    <%= link_to "My Creator", user_path(@project.user), :class => "btn-primary btn-sm" %>
    <%= link_to "Edit Project", edit_project_path(@project), :class => "btn-primary btn-sm" %>
    <%= link_to "Back this Project", back_this_project_path(@project.id), :class => "btn-primary btn-sm" %>
    <%= link_to "Delete Project",  @project, method: :delete, data: { confirm: "Are you Sure?" }, :class => "btn-primary btn-sm" %>
