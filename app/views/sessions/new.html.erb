<h1>Log In</h1>
<%= render 'communities/errors' %>


<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :user_name %><br />
    <%= text_field_tag :user_name, params[:user_name] %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log In", :class => "btn-primary btn-sm" %></div>
<% end %>
Don't have an account yet? <br>
<%= link_to 'Sign up', new_user_path, :class => "btn-primary btn-sm" %>
